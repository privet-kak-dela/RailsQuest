<% if flash[:alert] %>
  <div class="notice"><%= flash[:alert] %></div>
<% end %>

<div class='battlefield'>
  <div class='team_container left'>
    <%- Character.team1.each do |character| %>
      <div>
        <%= image_tag character.unit%>
      </div>
    <% end %>
  </div>
  <div class='team_container right'>
    <%- Character.team2.each do |character| %>
      <div>
        <%= image_tag character.unit%>
      </div>
    <% end %>
  </div>
</div>

<div class='controls'>
  <div class='controls_container'>
    <%= button_to 'Add Knight', characters_path, params:{character: {team: 1, unit: 'knight'}}, method: :post %>
  </div>
  <div class='controls_container'>
    <%= button_to 'Add Mage', characters_path, params:{character: {team: 1, unit: 'mage'}}, method: :post %>
  </div>

  <div class='controls_container'>
    <%= button_to 'Ulta1', ultimate_characters_path, params: {team: 1}, method: :post, class: ultimate_ready_for?(team: 1) ? 'button--normal' : 'button--dimmed'%>
  </div>

  <div class='controls_container'>
    <%= button_to 'Add Medusa', characters_path, params:{character: {team: 2, unit: 'medusa'}}, method: :post %>
  </div>
  <div class='controls_container'>
    <%= button_to 'Add Jinn', characters_path, params:{character: {team: 2, unit: 'jinn'}}, method: :post %>
  </div>
  <div class='controls_container'>
    <%= button_to 'Ulta2', ultimate_characters_path, params: {team: 2}, method: :post, class: ultimate_ready_for?(team: 2) ? 'button--normal' : 'button--dimmed'%>
  </div>
</div>

<div class='controls'>
  <div class='controls_container'>
    <%= button_to 'Restart', restart_games_path, method: :post,style: 'margin-top: 20px;' %>
  </div>

  <div class='controls_container'>
    <%= button_to 'Generate random game', generate_games_path,
                  method: :post,style: 'margin-top: 20px;',
                  class: new_game? ? 'button--normal' : 'button--dimmed'%>
  </div>
</div>